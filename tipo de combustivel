CÓDIGO FONTE

#include <stdio.h>
#include <stdlib.h>
//tipo de dado
int main(){
      
    //declaracao de  variaveis 
    int op;
    int al = 0;
    int ga = 0;
    int di = 0;
    // condicao enquanto for verdade 
    while(1){
                //leitura de entrada de dados
                 scanf("%d",&op);
                //testa a condição e incrementa o tipo ga, di, et
                if(op == 1) al++;
                else if(op == 2) ga++;
                else if(op == 3) di++;
                else if(op == 4) break;
                else continue;
                }
                  
    //mostra o resultado 
    printf("MUITO OBRIGADO\n");
    printf("Alcool: %d\n",al);
    printf("Gasolina: %d\n",ga);
    printf("Diesel: %d\n",di);
    return 0;
      
}
